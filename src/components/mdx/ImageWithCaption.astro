---
import type { ImageMetadata } from 'astro';
import { Image as AstroImage } from 'astro:assets';

interface Props {
  src: ImageMetadata;
  alt: string;
  caption: string;
  width?: number;
  height?: number;
}

const { src, alt, caption, width, height } = Astro.props;
---

<style>
  .post-image {
    width: 100%;
  }
</style>

<!-- This is a MDX component. Use inline styles, or they won't
be bundled properly. -->
<figure style="text-align: center;">
  <AstroImage class="post-image" {src} {alt} {width} {height} />
  {
    caption ?
      <u>
        <i>
          <figcaption>{caption}</figcaption>
        </i>
      </u>
    : null
  }
</figure>
